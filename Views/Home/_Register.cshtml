@model User

<h1>Register</h1>

<form asp-action="Process_Register" asp-controller="Home" method="post">

    <div class="form-group">
    <div>
    <span asp-validation-for="Firstname" style="color:red;"></span>
    </div>
    First name:<input type="text" asp-for="Firstname">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Lastname" style="color:red;"></span>
    </div>
    Last name:<input type="text" asp-for="Lastname">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="Email" style="color:red;"></span>
    </div>
    Email:<input type="text" asp-for="Email">
    </div>
    
    <div class="form-group">
    <div>
    <span asp-validation-for="Password" style="color:red;"></span>
    </div>
    Password:<input type="text" asp-for="Password">
    </div>

    <div class="form-group">
    <div>
    <span asp-validation-for="C_Password" style="color:red;"></span>
    </div>
    Comfirm password:<input type="text" asp-for="C_Password">
    </div> 

    <div class="form-group">
    <input type="submit" value="Sign up Now!">
    </div>
</form>